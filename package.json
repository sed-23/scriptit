{
  "name": "commandpad",
  "displayName": "CommandPad",
  "description": "Your launchpad for scripts & configs. Run targets, navigate functions, lint issues â€” across Makefiles, Shell, PowerShell, Batch, .env and config files.",
  "version": "0.1.0",
  "publisher": "siddy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sed-23/commandpad"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "makefile",
    "shell",
    "bash",
    "powershell",
    "batch",
    "env",
    "config",
    "script runner",
    "codelens",
    "task runner",
    "dotenv",
    "ini"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "workspaceContains:**/Makefile",
    "workspaceContains:**/*.sh",
    "workspaceContains:**/*.ps1",
    "workspaceContains:**/*.bat",
    "workspaceContains:**/.env",
    "workspaceContains:**/*.ini",
    "workspaceContains:**/*.conf"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commandpad.runTarget",
        "title": "CommandPad: Run Target"
      },
      {
        "command": "commandpad.pickTarget",
        "title": "CommandPad: Pick & Run Target"
      },
      {
        "command": "commandpad.listAllTargets",
        "title": "CommandPad: List All Targets in Workspace"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "commandpad.pickTarget",
          "when": "resourceLangId == makefile || resourceLangId == shellscript || resourceLangId == powershell || resourceLangId == bat || resourceLangId == dotenv || resourceLangId == ini || resourceLangId == properties",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CommandPad",
      "properties": {
        "commandpad.makeCommand": {
          "type": "string",
          "default": "make",
          "description": "Path or name of the make executable."
        },
        "commandpad.shellCommand": {
          "type": "string",
          "default": "bash",
          "description": "Shell for running shell scripts (bash, zsh, sh)."
        },
        "commandpad.powershellCommand": {
          "type": "string",
          "default": "pwsh",
          "description": "PowerShell executable (pwsh or powershell)."
        },
        "commandpad.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show Run CodeLens above targets and functions."
        },
        "commandpad.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting and diagnostics."
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "commandpad-makefile",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        }
      },
      {
        "type": "commandpad-shell",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        }
      },
      {
        "type": "commandpad-powershell",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        }
      },
      {
        "type": "commandpad-batch",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        }
      },
      {
        "type": "commandpad-env",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        }
      },
      {
        "type": "commandpad-config",
        "required": [
          "target"
        ],
        "properties": {
          "target": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
